pipeline {
	agent any
	stages{
    		stage('checkout') {
			steps {
    				git "https://github.com/351441/petclinic.git"
    			}
		}
    		stage('Build') {
			steps {
    				sh "/var/lib/jenkins/tools/hudson.tasks.Maven_MavenInstallation/M3.6/bin/mvn clean package"
				}    		
		}
    		stage('Test') {
			steps{
    				junit "target/surefire-reports/*.xml"
			}    		
		}
    		stage('Artifct') {
			steps {
    				archiveArtifacts artifacts: "target/*.?ar", followSymlinks: false
			}
    		}
 	}
}
